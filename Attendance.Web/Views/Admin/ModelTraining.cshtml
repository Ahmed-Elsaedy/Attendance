@{
    ViewData["Title"] = "Model Training";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Model Training</h1>

<div class="container">
    <div class="row my-2">
        <div class="col">
            <div class="progress" style="display:none">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                     role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
            </div>
        </div>
    </div>
    <div class="row my-1">
        <div class="col">
            <button type="button" id="btnStart" class="btn btn-primary">Start Training</button>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#btnStart').on('click', () => {
            $('.progress').show();
            $('#btnStart').hide();
            $.ajax({
                url: "/Admin/ResetModelTraining",
                type: 'get',
                success: function(response) {
                    $('.progress').hide();
                    $('#btnStart').show();
                    debugger;
                },
                failure: function(response) {
                    alert(response.responseText);
                    $('.progress').hide();
                    debugger;
                },
                error: function(response) {
                    alert(response.responseText);
                    $('.progress').hide();
                    debugger;

                }
            });
        })
    </script>

}