@model IList<Microsoft.Azure.CognitiveServices.Vision.Face.Models.Person>

@{
    ViewData["Title"] = "Training";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Training Model</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Code
            </th>
            <th>
                @string.Format("Training Id")
            </th>
            <th>
                @string.Format("Number Of Faces")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.UserData" width="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersistedFaceIds.Count)
                </td>

            </tr>
        }
    </tbody>
</table>